<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chtTv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <Button
            android:id="@+id/btStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/start"
            android:layout_margin="20dp"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/tvText"
            app:layout_constraintEnd_toEndOf="@+id/tvText"
            app:layout_constraintStart_toStartOf="@+id/tvText"
            />

        <Button
            android:id="@+id/btStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/stop"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/btStart"
            app:layout_constraintStart_toStartOf="@+id/btStart"
            app:layout_constraintTop_toBottomOf="@+id/btStart" />

        <Button
            android:id="@+id/btReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/btStop"
            app:layout_constraintStart_toStartOf="@+id/btStop"
            app:layout_constraintTop_toBottomOf="@+id/btStop" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/start_time"
            android:layout_marginTop="300dp"
            android:gravity="center"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>


